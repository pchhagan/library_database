<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>Authored Works</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    </head>

    <body class=" bg-light bg-opacity-100">
        <!--Horizontal banner at top to navigate pages-->
        <nav class="navbar navbar-expand-lg navbar-light text-dark bg-warning bg-opacity-50">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <div class="navbar-nav">
                        <a class="nav-link" href="/authors">Authors</a>
                        <a class="nav-link" href="/genres">Genres</a>
                        <a class="nav-link" href="/books">Books</a>       
                        <a class="nav-link" href="/libraryPatrons">Library Patrons</a>      
                        <a class="nav-link" href="/activeLoans">Active Loans</a>                                                           
                        <a class="nav-link active" aria-current="page" href="/authoredworks">Authored Works</a>
                    </div>
                </div>
            </div>
        </nav>

        <div class="container-fluid text-center p-5">
            <h1>Authored Works</h1>
            <h3>This page is for viewing, adding, and removing Authored Works from the library database</h3>
            <p></p>
        </div>
        <!--form to add authored works-->
        <div>
            <form id="addWork" action="authoredworks" method="post">
                <div class="form-group m-5">
                    <label for="newAuthoredWork" class="h4">Add an authored work:</label>
                    <select class="form-select" aria-label="Default select example" id='type_filter' name="authorID" required > 
                    <option disabled selected hidden>Author ID</option>
                    {{#each author}}
                    <option>{{authorID}}</option>
                    {{/each}}
                    </select>

                    <select class="form-select" aria-label="Default select example" id='type_filter' name="bookID" required > 
                    <option disabled selected hidden>Book ID</option>
                    {{#each book}}
                    <option>{{bookID}}</option>
                    {{/each}}
                    </select>
                    {{!-- <input type="number" class="form-control" name="authorID" placeholder="authorID" required>
                    <input type="number" class="form-control" name="bookID" placeholder="bookID"required>  --}}
                    <br>
                    <button type="submit" class="btn btn-primary">Add Authored Work</button>
            </form>
        </div>

        <!--Table to show authored works data-->
        <div class="m-5">
            <table class="table ">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">authorID</th>
                        <th scope="col">First Name</td>
                        <th scope="col">Last Name</td>
                        <th scope="col">bookID</th>
                        <th scope="col">Title</td>
                    </tr>
                </thead>
                <tbody>
                    {{#each works}}
                    <tr>
                        <td>{{authorID}}</td>
                        <td>{{firstName}}</td>
                        <td>{{lastName}}</td>
                       <td>{{bookID}}</td> 
                        <td>{{title}}</td>
                        <td><a href="/authoredworks/delete?authorID={{this.authorID}}&bookID={{this.bookID}}">Delete</a></td>
                    </tr>
                    {{/each}}

                </tbody>
            </table>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    </body>
</html>