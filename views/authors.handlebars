<div class="container-fluid text-center p-5">
    <h1>Authors</h1>
    <h3>This page is for viewing and adding Author information</h3>
    <p></p>
</div>

<!--form to add author data-->
<div>
    <form id="addAuthor" action="/authors" method="post" >
        <div class="form-group m-5">
            <label for="newAuthor" class="h4">Add an author:</label>
            <input type="text" class="form-control" name="firstName" placeholder="First Name" required>
            <input type="text" class="form-control" name="lastName" placeholder="Last Name" required>
            <br>
            <button type="submit" class="btn btn-primary">Add Author</button>
    </form>
</div>

<!--Table to show author data-->
<div class="m-5">
    <table class="table ">
        <thead class="thead-dark">
            <tr>
                <th scope="col">authorID</th>
                <th scope="col">firstName</th>
                <th scope="col">lastName</th>
            </tr>
        </thead>
        <tbody>
            {{#each authors}}
            <tr>
                <td>{{authorID}}</td>
                <td>{{firstName}}</td>
                <td>{{lastName}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
